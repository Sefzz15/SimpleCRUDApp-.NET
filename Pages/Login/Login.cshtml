@page
@model SimpleCRUDApp.Pages.Login.Login
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">User Login</h2>

        @if (Model.ErrorMessage.Length > 0)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">

            <div class="row mb-3">
                <label for="uname" class="col-sm-4 col-form-label">Username</label>
                <div class="col-sm-8">
                    <input id="uname" class="form-control" asp-for="uname" />
                    <span asp-validation-for="uname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="upass" class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input id="upass" type="password" class="form-control" asp-for="upass" />
                    <span asp-validation-for="upass" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Users/Create" role="button">Create New Account</a>
                </div>
            </div>

        </form>
    </div>
</div>