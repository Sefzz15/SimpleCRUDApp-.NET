@page
@model SimpleCRUDApp.Pages.Users.Create
@{
    ViewData["Title"] = "Create";
}

<div class="=row">
    <div class="col-md-8 mx-auro rounded border p-4">
        <h2 class="text-center mb-5">New User</h2>

        @if (Model.ErrorMessage.Length > 0)
        {
            <div class="alert alert-danger alert alert-dismissible fade show" role="alert">
                <string>@Model.ErrorMessage</string>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">

            <div class="row mb-3">
                <label for="uname" class="col-sm-4 col-form-label">Username</label>
                <div class="col-sm-8">
                    <input id="uname" class="form-control" asp-for="uname" />
                    <span asp-validation-for="uname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="upass" class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input type="password" id="upass" class="form-control" asp-for="upass" />
                    <span asp-validation-for="upass" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Users/index" role="button">Cancel</a>
                </div>
            </div>

        </form>

    </div>
</div>
